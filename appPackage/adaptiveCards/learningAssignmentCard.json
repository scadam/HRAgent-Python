{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "style": "${if(assignmentStatus == 'Completed', 'default', if(overdue, 'attention', if(required, 'emphasis', 'default')))}",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${if(assignmentStatus == 'Completed', 'âœ…', if(overdue, 'ðŸš¨', if(required, 'ðŸ“š', 'ðŸ“–')))}",
                  "size": "Large",
                  "spacing": "None"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${learningContent}",
                  "weight": "${if(assignmentStatus == 'Completed', 'Lighter', if(overdue, 'Bolder', if(required, 'Bolder', 'Default')))}",
                  "size": "${if(assignmentStatus == 'Completed', 'Default', if(overdue, 'Medium', 'Default'))}",
                  "color": "${if(assignmentStatus == 'Completed', 'Good', if(overdue, 'Warning', 'Default'))}",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "${assignmentStatus}${if(dueDate, ' â€¢ Due: ' + formatDateTime(dueDate, 'MMM dd, yyyy'), '')}",
                  "size": "Small",
                  "color": "${if(assignmentStatus == 'Completed', 'Good', if(overdue, 'Warning', 'Accent'))}",
                  "weight": "${if(overdue, 'Bolder', 'Default')}",
                  "spacing": "Small"
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Container",
                  "items": [
                    {
                      "type": "TextBlock",
                      "text": "OVERDUE",
                      "size": "Small",
                      "weight": "Bolder",
                      "color": "Warning",
                      "$when": "${overdue && assignmentStatus != 'Completed'}"
                    },
                    {
                      "type": "TextBlock",
                      "text": "REQUIRED",
                      "size": "Small",
                      "weight": "Bolder",
                      "color": "Accent",
                      "$when": "${required && assignmentStatus != 'Completed'}"
                    },
                    {
                      "type": "TextBlock",
                      "text": "COMPLETED",
                      "size": "Small",
                      "weight": "Lighter",
                      "color": "Good",
                      "$when": "${assignmentStatus == 'Completed'}"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}